<div class='container'>
  <div class="row">
<div class="col-xs-3">
  <%= render 'users/b1', user: @user,book: Book.new %>
</div>

<div class="col-xs-9">
      <h1>Books</h1>
    <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>opinion</th>
          </tr>
        </thead>
         <% @user.books.each do |book| %>
         <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_img.jpg" %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%=book.body%></td>
         </tr>
         <% end %>
      </table>
</div>