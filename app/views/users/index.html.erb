<div class='container'>
  <div class="row">


<div class="col-xs-3">
  <%= render 'users/b1', user: current_user,book: Book.new %>
</div>

      <div class="col-xs-9">
        <h1>Users</h1>
<table class="table table-striped">
    <thead>
        <th>image</th>
        <th>name</th>
        <th></th>
    </thead>
<% @users.each do |user| %>
    <tr>
    <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_img.jpg" %></td>
    <td><%= user.name %></td>

    <td><%= link_to "Show", user_path(user.id) %></td>
  </tr>
<% end %>
</table>
</div>