<div class='container'>
  <div class="row">

<div class="col-xs-3">

<%= flash[:success] %>




  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>error</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <%= render 'users/b1', user: current_user,book: Book.new %>
</div>

<div class="col-xs-9">
      <h1>Books</h1>

<table class="table table-striped">
 <thead>
    <tr>
    <th></th>
        <th>Title</th>
        <th>Opinion</th>
    </tr>
 </thead>

<tbody>
    <% @books.each do |book| %>
    <tr>
        <td>
        <%= link_to user_path(book.user.id) do %>
         <% end %>
         </td>
    <td><%= link_to book.title, book_path(book)%></td>
    <td><%= book.body %></td>
  </tr>
 <% end %>
</tbody>
</table>

</div>